  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "node -r dotenv/config ./node_modules/vite/bin/vite.js build --mode production",
    "build:dev": "node -r dotenv/config ./node_modules/vite/bin/vite.js build --mode development",
    "dev:worker": "wrangler pages dev dist --compatibility-date=2024-02-28 --d1 FEED_DB --ip 0.0.0.0 --port 8788",
